
<main>
  <div>
    <h2>User Info</h2>
    <%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>

    <table>
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
          <th></th>
        </tr>
      </tbody>
    </table>
      <p><%= link_to "Edit", edit_user_path(current_user) %></p>

  </div>

  <div>
    <h2>New book</h2>
    <%= form_with model: @book, local:true do |f| %>

    <h4>title</h4>
    <%= f.text_field :title %>

    <h4>opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

    <% end %>
  </div>



  <div>
    <h2>Books</h2>

    <table>
      <thead>
        <tr>
          <th></th>
          <th>title</th>
          <th>opinion</th>
        </tr>
      </thead>

      <tbody>
        <% @books.zip(@users).each do |book, user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>

        </tr>
        <% end %>
      </tbody>

    </table>
  </div>




</main>
